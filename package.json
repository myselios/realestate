{
  "name": "realestate-monorepo",
  "private": true,
  "packageManager": "npm@10.9.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:web": "cd packages/web && npm run dev",
    "dev:api": "npm run dev --workspace=packages/api",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "prisma:generate": "prisma generate --schema=./packages/api/prisma/schema.prisma",
    "prisma:push": "prisma db push --schema=./packages/api/prisma/schema.prisma"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prisma": "^6.10.1"
  }
}
