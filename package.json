{
  "name": "realestate-monorepo",
  "private": true,
  "packageManager": "npm@10.9.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npx turbo dev",
    "dev:web": "cd packages/web && npm run dev",
    "dev:api": "npm run dev --workspace=packages/api",
    "build": "turbo run build --filter=web",
    "lint": "npm run lint --workspaces --if-present",
    "prisma:generate": "npx prisma generate --schema=./packages/api/prisma/schema.prisma",
    "prisma:push": "npx turbo db:push --filter=api",
    "db:seed": "npx turbo db:seed --filter=api",
    "start": "npx turbo start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prisma": "^6.10.1"
  }
}
